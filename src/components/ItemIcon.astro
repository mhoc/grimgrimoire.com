---
type Props = {
  href?: string;
  imageUrl: string;
  name?: string;
  subtext?: string;
}
const { href, imageUrl, name, subtext } = Astro.props;
---
{href ? (
  <a class="bg-stone-800 flex flex-col gap-1 items-center no-underline border-2 border-yellow-600 rounded-md p-2 w-fit h-fit" href={href}>
    <img class="h-[80px] w-[80px] min-w-[80px] min-h-[80px]" src={imageUrl} />
    <div class="flex flex-col">
      {name && <span class="text-stone-300 text-center text-sm leading-tight">{name}</span>}
      {subtext && <span class="text-stone-400 text-center text-xs leading-tight">{subtext}</span>}
    </div>
  </a>
) : (
  <div class="bg-stone-800 flex flex-col gap-1 items-center no-underline border-2 border-yellow-600 rounded-md p-2 w-fit h-fit">
    <img class="h-[80px] w-[80px] min-w-[80px] min-h-[80px]" src={imageUrl} />
    <div class="flex flex-col">
      {name && <span class="text-stone-300 text-center text-sm leading-tight">{name}</span>}
      {subtext && <span class="text-stone-400 text-center text-xs leading-tight">{subtext}</span>}
    </div>
  </div>
)}
