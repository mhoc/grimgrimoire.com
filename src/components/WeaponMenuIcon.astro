---
type Props = {
  href: string;
  imageUrl: string;
  large?: boolean;
  name?: string;
}
const { href, imageUrl, large, name } = Astro.props;
---
<a class="container" href={href}>
  <img class={large ? "img-large" : "img"} src={imageUrl} />
  {name && <span class="name">{name}</span>}
</a>
<style>
  .container {
    cursor: pointer;
    display: flex;
    flex-direction: column;
    text-decoration: none;
  }
  .img {
    max-height: 100px;
    max-width: 100px;
  }
  .img-large {
    max-height: 100px;
    max-width: 100px;
  }
  @media only screen and (max-width: 600px) {
    .img {
      max-height: 60px;
      max-width: 60px;
    }
    .img-large {
      max-height: 25vw;
      max-width: 25vw;
    }
  }
  .name {
    color: #e4e4e7;
    font-size: 0.6rem;
  }
</style>