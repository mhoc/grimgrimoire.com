import WeaponTitle from "../components/WeaponTitle.astro";
import Layout from "../layouts/Layout.astro";
import WeaponLayout from "../layouts/WeaponLayout.astro";
---
<Layout>
  <WeaponLayout>
    <WeaponTitle
      description="Can deal critical damage. Amount affects damage instead."
      iconSrc="/flash-arrow.webp" 
      name="Flash Arrow"
    />
    <WeaponEvolution 
      lhs={[
        { href: "/flash-arrow", icon: "/flash-arrow.webp", name: "Flash Arrow" },
        { href: "/bracer", icon: "/bracer.webp", name: "Bracer (max)" },
      ]}
      rhs={[
        { href: "/millionaire", icon: "/millionaire.webp", name: "Millionaire" },
      ]}
    />
  </WeaponLayout>
</Layout>
